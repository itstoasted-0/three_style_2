<header class="l-header p-header">
  <div class="p-header_link">
    <%= link_to root_path, class: 'p-header_link_logo' do %>
      <h1><%= image_tag 'image/logo.png', alt: 'Three-Syle' %></h1>
    <% end %> 

    <% if user_signed_in? %>
      <%# ログイン時 %>
      <%= link_to 'HOME', posts_path, class: "p-header_link_item" %>
      <%= link_to 'USERS', users_path, class: "p-header_link_item" %>
      <ul id="dropdown", class="p-header_link_item" >
        <li>MY ACOUNT
          <ul>
            <li><%= link_to 'MY PAGE', user_path(current_user), class: "p-header_link_item" %></li>
            <li><%= link_to "EDIT", edit_user_registration_path, class: "p-header_link_item" %></li>
            <li><%= link_to "LOGOUT", destroy_user_session_path, data: { confirm: "ログアウトしますか？" }, class: "p-header_link_item" %></li>
          </ul>
        </li>
      </ul>
      <%= "【LOGIN】#{current_user.name}" %>
    <% else %>
      <%# 非ログイン時 %>
      <%= link_to "SIGN UP", new_user_registration_path, class: "p-header_link_item" %>
      <%= link_to "LOGIN", new_user_session_path, class: "p-header_link_item" %>
    <% end %>

  </div>
</header>

<header class="l-drawer p-drawer">
  <%= link_to root_path, class: 'l-drawer_logo' do %>
    <%= image_tag 'image/logo.png', alt: 'Three-Syle', class: "l-drawer_logo_img" %>
  <% end  %>
  <nav class="p-drawer_nav">
    <% if user_signed_in? %>
      <%# ログイン時 %>
      <p><%= "【LOGIN】#{current_user.name}" %></p>
      <%= link_to "TOP", root_path, class: "p-header_link_item" %>
      <%= link_to 'HOME', posts_path, class: "p-header_link_item" %>
      <%= link_to 'USERS', users_path, class: "p-header_link_item" %>
      <%= link_to 'MY PAGE', user_path(current_user), class: "p-header_link_item" %>
      <%= link_to "EDIT", edit_user_registration_path, class: "p-header_link_item" %>
      <%= link_to "LOGOUT", destroy_user_session_path, data: { confirm: "ログアウトしますか？" }, class: "p-header_link_item" %>
      <p class="p-drawer_nav_close"><span>close</span></p>
    <% else %>
      <%# 非ログイン時 %>
      <%= link_to "TOP", root_path, class: "p-header_link_item" %>
      <%= link_to "SIGN UP", new_user_registration_path, class: "p-header_link_item" %>
      <%= link_to "LOGIN", new_user_session_path, class: "p-header_link_item" %>
      <p class="p-drawer_nav_close"><span>close</span></p>
    <% end %>
  </nav>
  <div id="hamburger">
    <span></span>
  </div>
</header>
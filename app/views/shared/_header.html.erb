<header class="p-header">
  <div class="p-header_link">

    <% if user_signed_in? %>
      <%# ログイン時 %>
      <%= link_to "トップ", root_path, class: "p-header_link_item" %>
      <%= link_to '投稿画面へ', new_post_path, class: "p-header_link_item" %>
      <%= link_to '投稿一覧へ', posts_path, class: "p-header_link_item" %>
      <%= link_to 'マイページへ', users_path, class: "p-header_link_item" %>
      <%= link_to "アカウント編集", edit_user_registration_path, class: "p-header_link_item" %>
      <%= link_to "ログアウト", destroy_user_session_path, data: { confirm: "ログアウトしますか？" }, class: "p-header_link_item" %>
      <%= "【ログイン中のアドレス】#{current_user.email}" %>
    <% else %>
      <%# 非ログイン時 %>
      <%= link_to "新規登録", new_user_registration_path, class: "p-header_link_item" %>
      <%= link_to "ログイン", new_user_session_path, class: "p-header_link_item" %>
    <% end %>

  </div>
</header>